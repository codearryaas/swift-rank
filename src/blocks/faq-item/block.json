{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "swift-rank/faq-item",
	"version": "1.0.0",
	"title": "FAQ Item",
	"category": "widgets",
	"parent": ["swift-rank/faq"],
	"icon": "editor-help",
	"description": "A single FAQ question and answer item.",
	"keywords": ["faq", "question", "answer"],
	"textdomain": "swift-rank",
	"supports": {
		"html": false,
		"reusable": false,
		"inserter": false,
		"color": {
			"background": true,
			"text": true,
			"link": true
		},
		"spacing": {
			"padding": true,
			"margin": true
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		}
	},
	"usesContext": ["swift-rank/enableSchema", "swift-rank/enableToggle"],
	"attributes": {
		"question": {
			"type": "string",
			"default": ""
		},
		"answer": {
			"type": "string",
			"default": ""
		},
		"isOpen": {
			"type": "boolean",
			"default": false
		}
	}
}
